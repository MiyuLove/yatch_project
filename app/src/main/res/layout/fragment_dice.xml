<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YatchFragment.DiceFragments.DiceFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/dice_board_dialog_horizontal70"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dice_board_dialog_horizontal20">


        <ImageView
            android:id="@+id/dice_board_dialog_dice1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dice_board_dialog_vertical20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dice_board_dialog_dice2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dice_board_dialog_vertical40"
            app:layout_constraintStart_toStartOf="@+id/dice_board_dialog_vertical20"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dice_board_dialog_dice3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dice_board_dialog_vertical60"
            app:layout_constraintStart_toStartOf="@+id/dice_board_dialog_vertical40"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dice_board_dialog_dice4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dice_board_dialog_vertical80"
            app:layout_constraintStart_toStartOf="@+id/dice_board_dialog_vertical60"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dice_board_dialog_dice5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dice_board_dialog_vertical80"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/dice_board_dialog_cast_button"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:text="Cast!"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dice_board_dialog_vertical80"
            app:layout_constraintStart_toStartOf="@+id/dice_board_dialog_vertical20"
            app:layout_constraintTop_toTopOf="@+id/dice_board_dialog_horizontal50" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_board_dialog_horizontal50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".5"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_board_dialog_vertical20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".2"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_board_dialog_vertical40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.40" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_board_dialog_vertical60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.60" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_board_dialog_vertical80"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>