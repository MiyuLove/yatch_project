<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".YatchFragment.HistoryFragment">

    <TextView
        android:id="@+id/history_title_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Yatch History"
        android:fontFamily="@font/base_font"
        android:textColor="@color/default_text_color"
        android:textSize="60sp"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/history_guideline_horizontal_10"
        app:layout_constraintEnd_toStartOf="@+id/history_guideline_vertical_95"
        app:layout_constraintStart_toStartOf="@+id/history_guideline_vertical_05"
        app:layout_constraintTop_toTopOf="@+id/history_guideline_horizontal_02" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/history_result_board"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.75"
        tools:listitem="@layout/result_board_item"
        android:background="@color/recycler_view_background_color"

        app:layout_constraintTop_toTopOf="@id/history_guideline_horizontal_10"
        app:layout_constraintEnd_toStartOf="@+id/history_guideline_vertical_95"
        app:layout_constraintStart_toStartOf="@+id/history_guideline_vertical_05"/>

    <Button
        android:id="@+id/history_result_button"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:text="초기화"
        android:textSize="50sp"
        android:fontFamily="@font/base_font"

        android:backgroundTint="@color/default_button_color"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/history_result_board" />

    <TextView
        android:id="@+id/history_result_empty"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="Empty"
        android:textSize="60sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/history_guideline_vertical_05"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/history_guideline_vertical_95"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/history_guideline_horizontal_02"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/history_guideline_horizontal_10"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>