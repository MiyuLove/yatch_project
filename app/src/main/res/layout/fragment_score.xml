<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YatchFragment.DiceFragments.ScoreFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dice_board_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#BEEBFF"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <include
            android:id="@+id/dice_num1_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal13"
            app:layout_constraintEnd_toStartOf="@+id/dice_score_vertical45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/dice_num2_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal26"
            app:layout_constraintEnd_toStartOf="@+id/dice_score_vertical45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal13" />

        <include
            android:id="@+id/dice_num3_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal39"
            app:layout_constraintEnd_toStartOf="@+id/dice_score_vertical45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal26" />

        <include
            android:id="@+id/dice_num4_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal52"
            app:layout_constraintEnd_toStartOf="@+id/dice_score_vertical45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal39" />

        <include
            android:id="@+id/dice_num5_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal65"
            app:layout_constraintEnd_toStartOf="@+id/dice_score_vertical45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal52" />

        <include
            android:id="@+id/dice_num6_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal78"
            app:layout_constraintEnd_toStartOf="@+id/dice_score_vertical45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal65" />

        <TextView
            android:id="@+id/dice_board_bonus_text"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="BoNuS : 35"
            android:background="@drawable/board_user_text_background"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal91"
            app:layout_constraintEnd_toStartOf="@+id/dice_score_vertical45"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal78" />

        <include
            android:id="@+id/dice_triple_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dice_score_vertical55"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/dice_quadra_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal26"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dice_score_vertical55"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal13" />

        <include
            android:id="@+id/dice_full_house_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal39"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dice_score_vertical55"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal26" />

        <include
            android:id="@+id/dice_choice_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal52"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dice_score_vertical55"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal39" />

        <include
            android:id="@+id/dice_small_straight_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal65"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dice_score_vertical55"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal52" />

        <include
            android:id="@+id/dice_large_straight_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dice_score_horizontal78"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dice_score_vertical55"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal65" />

        <include
            android:id="@+id/dice_yatch_button"
            layout="@layout/board_button_box"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/dice_score_horizontal91"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dice_score_vertical55"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal78" />

        <TextView
            android:id="@+id/dice_score_text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Score : 10"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal91" />

        <Button
            android:id="@+id/dice_score_before_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="이전"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dice_score_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal91" />

        <Button
            android:id="@+id/dice_score_after_button"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="다음"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dice_score_text"
            app:layout_constraintTop_toTopOf="@+id/dice_score_horizontal91" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_vertical45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.45" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_vertical55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.55" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_horizontal13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".13" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_horizontal26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".26" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_horizontal39"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".39" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_horizontal52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".52" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_horizontal65"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_horizontal78"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".78" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/dice_score_horizontal91"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent=".91" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>